<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:custom="clr-namespace:Wesley.Client.CustomViews;assembly=Wesley.Client"
             
             x:Class="Wesley.Client.Pages.Order.InventorySummeryView"
             x:Name="Current_InventorySummeryView">
    <RefreshView IsRefreshing="{Binding Path=ForceRefresh, Mode=OneWay}"
                 Command="{Binding RefreshCommand}"
                 RefreshColor="{StaticResource PrimaryDarkColor}">

   
                <CollectionView ItemsSource="{Binding Bills}"
                                x:Name="orders"
                                ItemSizingStrategy="MeasureAllItems"
                                SelectedItem="{Binding Selecter, Mode=TwoWay}"
                                RemainingItemsThresholdReachedCommand="{Binding ItemTresholdReachedCommand}"
                                RemainingItemsThreshold="{Binding ItemTreshold}"
                                SelectionMode="Single"
                                VerticalScrollBarVisibility="Always">
                    <CollectionView.Header>
                        <custom:HeaderView ControlTemplate="{StaticResource InventorySummeryView_Template}" />
                    </CollectionView.Header>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Style="{StaticResource GGrid}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <!-- 单号-->
                                <Label Grid.Row="0"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="{Binding BillNumber,StringFormat='单号：{0}'}"
                                       LineBreakMode="TailTruncation"
                                       FontSize="{StaticResource FT14}"
                                       HorizontalOptions="Start"
                                       VerticalOptions="CenterAndExpand"
                                       Margin="{StaticResource ML10}" />
                                <BoxView Grid.Row="0"
                                         Grid.Column="2"
                                         Margin="{StaticResource MR10}"
                                         CornerRadius="50"
                                         HeightRequest="25"
                                         HorizontalOptions="End"
                                         Opacity=".7"
                                         VerticalOptions="Center"
                                         WidthRequest="50"
                                         Color="{StaticResource PrimaryColor}" />
                                <!--状态-->
                                <Label Grid.Row="0"
                                       Grid.Column="2"
                                       Margin="0,0,17,0"
                                       Text="未盘点"
                                       TextColor="White"
                                       FontSize="{StaticResource FT12}"
                                       HorizontalOptions="End"
                                       VerticalOptions="CenterAndExpand">
                                    <Label.Triggers>
                                        <DataTrigger Binding="{Binding InventoryStatus}"
                                                     TargetType="Label"
                                                     Value="1">
                                            <Setter Property="Text"
                                                    Value="进行中" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding InventoryStatus}"
                                                     TargetType="Label"
                                                     Value="2">
                                            <Setter Property="Text"
                                                    Value="已结束" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding InventoryStatus}"
                                                     TargetType="Label"
                                                     Value="3">
                                            <Setter Property="Text"
                                                    Value="已取消" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                                <!--仓库-->
                                <Label Grid.Row="1"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="3"
                                       Text="{Binding WareHouseName}"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Start"
                                       FontSize="{StaticResource FT14}"
                                       Margin="{StaticResource ML10}"
                                       VerticalOptions="CenterAndExpand" />
                                <!--业务员-->
                                <Label Grid.Row="2"
                                       Grid.Column="0"
                                       Text="{Binding  InventoryPersonName,StringFormat='盘点人：{0}'}"
                                       TextColor="{StaticResource SecondaryTextColor}"
                                       HorizontalOptions="Start"
                                       FontSize="{StaticResource FT14}"
                                       VerticalOptions="Start"
                                       Margin="{StaticResource ML10}" />
                                <!--盘点时间-->
                                <Label Grid.Row="2"
                                       Grid.Column="1"
                                       Grid.ColumnSpan="2"
                                       TextColor="{StaticResource SecondaryTextColor}"
                                       Text="{Binding CreatedOnUtc}"
                                       HorizontalOptions="End"
                                       FontSize="{StaticResource FT14}"
                                       VerticalOptions="Start"
                                       Margin="{StaticResource MR10}" />
                                <custom:DashedBar Grid.Row="3"
                                                  Grid.Column="0"
                                                  Grid.ColumnSpan="3"
                                                  IsVisible="{Binding IsLast}" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <custom:NullView />
                    </CollectionView.EmptyView>
                </CollectionView>

        
    </RefreshView>
</ContentView>
