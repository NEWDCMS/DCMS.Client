    <ControlTemplate x:Key="AllocationBillPage_Template">
        <Grid Style="{StaticResource GGrid}" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand"
                BackgroundColor="#eeeeee" Padding="{StaticResource PLR10}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Text="商品名称" LineBreakMode="TailTruncation" FontSize="{StaticResource FT14}"
                    HorizontalOptions="Start" VerticalOptions="CenterAndExpand"></Label>
            <Label Grid.Column="1" Text="单价" FontSize="{StaticResource FT14}" HorizontalOptions="End"
                    VerticalOptions="CenterAndExpand"></Label>
            <Label Grid.Column="2" Text="数量" FontSize="{StaticResource FT14}" HorizontalOptions="End"
                    VerticalOptions="CenterAndExpand"></Label>
            <Label Grid.Column="3" Text="小计" FontSize="{StaticResource FT14}" HorizontalOptions="End"
                    VerticalOptions="CenterAndExpand"></Label>
        </Grid>
    </ControlTemplate> 
