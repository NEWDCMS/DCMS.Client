    <!--应收款-->
    <ControlTemplate x:Key="Receivables_Template">
        <Grid Style="{StaticResource GGrid}" Padding="{StaticResource PLR10}" BackgroundColor="#eee">
            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0"
                   Margin="10,0,0,0"
                   Text="编号"
                   FontAttributes="Bold"
                   FontSize="{StaticResource FT14}"
                    HorizontalOptions="Start" VerticalOptions="CenterAndExpand"></Label>
            <Label Grid.Column="1"
                   Text="客户"
                   FontAttributes="Bold"
                   FontSize="{StaticResource FT14}" HorizontalOptions="Start"
                    VerticalOptions="CenterAndExpand"></Label>
            <Label Grid.Column="2"
                   Text="欠款"
                   FontAttributes="Bold"
                   FontSize="{StaticResource FT14}" HorizontalOptions="End"
                    VerticalOptions="CenterAndExpand"></Label>
        </Grid>
    </ControlTemplate>


    <!--热销明细-->
    <ControlTemplate x:Key="HotSaleDetailPage_Template">
        <Grid Style="{StaticResource GGrid}" Padding="{StaticResource PLR10}" BackgroundColor="#eee">
            <Grid.RowDefinitions>
